class Solution:
    def eventualSafeNodes(self, graph: List[List[int]]) -> List[int]:
        n = len(graph)
        safe = {}

        ans = []

        def dfs(i):          #Recursive function
            if i in safe:
                return safe[i]
            safe[i] = False
            for nei in graph[i]:
                if not dfs(nei):
                    return False
            safe[i] = True
            return safe[i]


        for i in range(n):
            if dfs(i):
                ans.append(i)

        return ans
